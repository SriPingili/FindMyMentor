<?xml version="1.0" encoding="utf-8"?>

<com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/folding_cell_margin"
    android:layout_width="match_parent"
    folding-cell:additionalFlipsCount="@integer/folding_cell_flip_count"
    folding-cell:animationDuration="@integer/animation_duration"
    folding-cell:backSideColor="#f4f0ff"
    folding-cell:cameraHeight="@integer/camera_height">

    <!-- CONTENT (UNFOLDED) LAYOUT (MUST BE AT LEAST 2x times BIGGER than content layout bellow)-->
    <include layout="@layout/cell_unfolded_layout" />

    <!-- TITLE (FOLDED) LAYOUT (MUST BE AT LEAST 2x times SMALLER than content layout above) -->
    <include layout="@layout/cell_folded_layout" />

</com.ramotion.foldingcell.FoldingCell>